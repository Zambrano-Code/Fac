<UserControl Name="myControl"
             x:Class="Utilidades.UserControls.ButtonType01"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent"
             >
    <Grid DataContext="{Binding ElementName=myControl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="28.033"/>
            <RowDefinition Height="21.967"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border Width="50" Height="50" Background="{Binding BackgroundOne}" CornerRadius="{Binding CornerRadius}" Grid.RowSpan="2" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
            <Grid Background="{Binding Icon}" Margin="{Binding MarginInterno}">

            </Grid>
        </Border>
        <ToolTipService.ToolTip>
            <ToolTip Content="{Binding Text}"/>
        </ToolTipService.ToolTip>
    </Grid>
</UserControl>
